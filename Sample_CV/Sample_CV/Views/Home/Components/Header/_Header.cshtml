@model Sample_CV.Models.AboutMe

<header class="header text-center">
		<div class="force-overflow">
			<h1 class="blog-name pt-lg-4 mb-0"><a href="#">@Model.Name</a></h1>

			<nav class="navbar navbar-expand-lg navbar-dark">

				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation"
					aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div id="navigation" class="collapse navbar-collapse flex-column">
					<div class="profile-section pt-3 pt-lg-0">
						<img class="profile-image mb-3 rounded-circle mx-auto" src="~/assets/images/@Model.Image" alt="image">

						<div class="bio mb-3"> @Model.IntroMessage
							</div>
						<ul class="social-list list-inline py-2 mx-auto">
							<li class="list-inline-item"><a href="@Model.LinkedInURL"><i class="fab fa-linkedin-in fa-fw"></i></a></li>
							<li class="list-inline-item"><a href="@Model.GitHubURL"><i class="fab fa-github-alt fa-fw"></i></a></li>
							</ul>
						<hr>
					</div>
					<ul class="navbar-nav flex-column text-right">
						<li class="nav-item">
							<a class="nav-link" asp-controller="home" asp-action="index"><i class="fas fa-user fa-fw ml-2"></i>صفحه اصلی<span
									class="sr-only">(current)</span></a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-controller="home" asp-action="contact"><i
									class="fas fa-envelope-open-text fa-fw ml-2"></i>ارتباط با ما</a>
						</li>
					</ul>
				</div>
		
		</nav>
		</div>
	</header>